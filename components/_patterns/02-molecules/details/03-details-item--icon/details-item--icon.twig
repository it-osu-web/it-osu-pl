<details{{ attributes }} class="details-item details-item--icon">
  {%
    set summary_classes = [
      required ? 'js-form-required',
      required ? 'form-required',
    ]
  %}
  {%- if title -%}
    <summary{{ summary_attributes.addClass(summary_classes) }} class="summary summary--plus summary--icon">
      <div class="summary__inner">
        <span class="summary__icon"><i class="{{ details_icon }}"></i></span>
        <span class="summary__text">{{ details_summary }}</span>
        <div class="summary__controls">
          <div class="pm-control plus"></div>
        </div>
      </div>
    </summary>
  {%- endif -%}

  {% if errors %}
    <div>
      {{ errors }}
    </div>
  {% endif %}
  <div class="details__inner">
    {{ details_content }}
  </div>
</details>