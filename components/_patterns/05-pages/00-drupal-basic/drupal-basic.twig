{% embed "@templates/drupal/page-template.twig" %}

	{% set menu_content %}
	{% include "@molecules/menus/main-menu/main-menu.twig" %}
	{% endset %}

	{% block primary_menu %}
		{% include "@templates/drupal/region-template.twig" with {
		region_name: 'primary-menu',
		content: menu_content,
	} %}
	{% endblock %}


	{% set hero_content %}
	{% include "@molecules/hero-banner/hero-banner.twig" %}
	{% endset %}

	{% block hero %}
		{% include "@templates/drupal/region-template.twig" with {
		region_name: 'hero',
		content: hero_content,
	} %}
	{% endblock %}


	{% set breadcrumb_content %}
	{% include "@molecules/menus/breadcrumb/breadcrumb.twig" %}
	{% endset %}

	{% block breadcrumb %}
		{% include "@templates/drupal/region-template.twig" with {
		region_name: 'breadcrumb',
		content: breadcrumb_content,
	} %}
	{% endblock %}


	{% set system_content %}
	{% include "@molecules/status-message/_status-message.twig" %}

	{% endset %}

	{% block system %}
		{% include "@templates/drupal/region-template.twig" with {
		region_name: 'system',
		content: system_content,
	} %}
	{% endblock %}

{% endembed %}
